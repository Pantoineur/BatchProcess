<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BatchProcess.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
        <StyleInclude Source="Controls/ButtonIcon.axaml"></StyleInclude>
    </Application.Styles>
             
             <Application.Resources>
                 <FontFamily x:Key="AkkoPro">/Assets/Fonts/AkkoPro-Regular.ttf#Akko Pro</FontFamily>
                 <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
                 
                 <SolidColorBrush x:Key="PrimaryText">White</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryBackground">#141726</SolidColorBrush>
                 <SolidColorBrush x:Key="SecondaryBackground">#282D4C</SolidColorBrush>
                 <SolidColorBrush x:Key="ElementBackground">#191d30</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHover">#282e4c</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHoverText">#DDDDDD</SolidColorBrush>
             </Application.Resources>
</Application>