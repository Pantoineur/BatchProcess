<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BatchProcess.ViewModels"
        xmlns:controls="using:BatchProcess.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <controls:GridButton />
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|GridButton">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Background="{TemplateBinding Background}"/>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
